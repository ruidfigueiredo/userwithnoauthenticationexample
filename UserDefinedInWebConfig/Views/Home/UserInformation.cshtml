@using System.Security.Claims
<h2>User Information</h2>

<div class="row">
    <div class="col-md-12">
        <div class="well">
            <div class="row">
                <div class="col-md-3">Name</div>
                <div class="col-md-9">@User.Identity.Name</div>
            </div>
            <div class="row">
                <div class="col-md-3">Authentication Type</div>
                <div class="col-md-9">@User.Identity.AuthenticationType</div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Claim Type</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        @foreach (var claim in ((ClaimsIdentity)User.Identity).Claims)
                        {
                            <tr>
                                <td>@claim.Type</td>
                                <td>@claim.Value</td>
                            </tr>
                        }                        
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

